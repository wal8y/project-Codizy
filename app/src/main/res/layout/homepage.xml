<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Codizy2.codizy.HomePage">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adView2"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            tools:context="com.Codizy2.codizy.HomePage">

            <TextView
                android:id="@+id/hey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_semibold"
                android:text="Hello World!"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/step1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adView2" />

            <Button
                android:id="@+id/finish"
                android:layout_width="88dp"
                android:layout_height="78dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#480000FE"
                android:clickable="false"
                android:enabled="false"
                android:onClick="finish"
                android:text="ðŸ‘‘\nfinish"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/step5" />

            <Button
                android:id="@+id/step1"
                android:layout_width="47dp"
                android:layout_height="73dp"
                android:backgroundTint="#480000FE"
                android:clickable="false"
                android:enabled="false"
                android:onClick="toQus"
                android:rotation="25"
                app:layout_constraintBottom_toTopOf="@+id/step2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.897" />

            <Button
                android:id="@+id/step2"
                android:layout_width="47dp"
                android:layout_height="73dp"
                android:backgroundTint="#480000FE"
                android:clickable="false"
                android:enabled="false"
                android:onClick="toQus"
                android:rotation="-21"
                app:layout_constraintBottom_toTopOf="@+id/step3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.934" />

            <Button
                android:id="@+id/step3"
                android:layout_width="47dp"
                android:layout_height="73dp"
                android:backgroundTint="#480000FE"
                android:clickable="false"
                android:enabled="false"
                android:onClick="toQus"
                android:rotation="25"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/step4"
                android:layout_width="47dp"
                android:layout_height="73dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#480000FE"
                android:clickable="false"
                android:enabled="false"
                android:onClick="toQus"
                android:rotation="-17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/step3" />

            <Button
                android:id="@+id/step5"
                android:layout_width="47dp"
                android:layout_height="73dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#480000FE"
                android:clickable="false"
                android:enabled="false"
                android:onClick="toQus"
                android:rotation="25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/step4" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/prompt_semibold"
                android:text="loops"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/step5"
                app:layout_constraintStart_toEndOf="@+id/step4"
                app:layout_constraintTop_toBottomOf="@+id/step3"
                app:layout_constraintVertical_bias="0.486" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/prompt_semibold"
                android:text="print"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/step4"
                app:layout_constraintEnd_toStartOf="@+id/step3"
                app:layout_constraintTop_toBottomOf="@+id/step2"
                app:layout_constraintVertical_bias="0.56" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/prompt_semibold"
                android:text="Introduction"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/step2"
                app:layout_constraintEnd_toStartOf="@+id/step1"
                app:layout_constraintTop_toBottomOf="@+id/hey"
                app:layout_constraintVertical_bias="0.597" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:fontFamily="@font/prompt_semibold"
                android:text="types,values"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/step3"
                app:layout_constraintStart_toEndOf="@+id/step2"
                app:layout_constraintTop_toBottomOf="@+id/step1"
                app:layout_constraintVertical_bias="0.521" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/prompt_semibold"
                android:text="functions"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/finish"
                app:layout_constraintEnd_toStartOf="@+id/step5"
                app:layout_constraintTop_toBottomOf="@+id/step4"
                app:layout_constraintVertical_bias="0.56" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        ads:adSize="BANNER"
        app:adUnitId="ca-app-pub-2671585248655668/8520709575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#0000FE"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="sendHome"
            app:backgroundTint="#00000000"
            app:elevation="0dp"
            app:maxImageSize="38dp"
            app:srcCompat="@drawable/home" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="sendInte"
            app:backgroundTint="#00000000"
            app:elevation="0dp"
            app:maxImageSize="37dp"
            app:srcCompat="@drawable/gear" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="sendRes"
            app:backgroundTint="#00000000"
            app:elevation="0dp"
            app:maxImageSize="37dp"
            app:srcCompat="@drawable/res" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="sendInfo"
            app:backgroundTint="#00000000"
            app:elevation="0dp"
            app:maxImageSize="37dp"
            app:srcCompat="@android:drawable/ic_dialog_info" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>